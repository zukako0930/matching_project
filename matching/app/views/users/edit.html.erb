  </div>
  <div class="form-group">
    <label for="self-introduciton">プロフィール</label>
    <%= form.text_area :prof, class: "form-control", rows: "3"%>
  </div>

  <div class="actions" align="right">
    <%= form.submit '更新',class:"btn btn-primary"%>
  </div>

</div>
<% end %>
