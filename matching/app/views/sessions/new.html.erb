<% if params[:notice] %>
  <div class="alert alert-success" role="alert"><%= params[:notice] %></div>
<% end %>
<% if @error %>
  <div class="alert alert-danger" role="alert">
    <%= @error %>
  </div>
<% end %>
<!-- <div style="background-image:url(<%= asset_path "yoshi.png" %>); height:700px; "/> -->
<% provide(:title, "Log in") %>
<div class="row">
  <div class="col-4" style="width:100%">
    <%= image_tag 'yoshi.jpg'%>
  </div>
  <div class="col-8">
    <div class="row">
    <div class="container col-6" style="padding-top:10%;">
      <div class="form_box">
      <%= image_tag 'title2.png'%>
      <%= form_for(:session, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control', :placeholder => "LINE@example.com"%>
        </div>
        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <%= f.submit "ログイン", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
    <br>
  </div>
  </div>
</div>
</div>
