<!-- <p id="notice"><%= notice %></p> -->
<% if params[:notice] %>
  <div class="alert alert-success" role="alert"><%= params[:notice] %></div>
<% end %>
<h1>Messages</h1>
<div class="row">

  <div class="container col-md-8"  style="background-color:#4BB1FF;">
    <%= form_with model: Message.new do |form| %>
      <div class="field">
        <%= form.hidden_field :send_user_id, :value => @current_user.id %>
        <%= form.hidden_field :receive_user_id, :value => @receive_user.id %>
      </div>
      <div class="input-group mb-3">
        <div class="input-group-prepend"><span class="input-group-text">To: <%= @receive_user.name%></span></div>
        <% form.label :body %>
        <%= form.text_field :body, id: :message_body, class: "form-control", placeholder: "想いを伝えよう。" %>
        <div class="input-group-append">
          <%= form.submit "送信",class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    <% if @messages %>
      <% @messages.reverse_each do |message| %>
          <div class="comment_area">
            <div ng-repeat="data in hoge.chatdata">
              <div class="row">
                <div class="col-md-12">
                  <% if message.send_user_id == @current_user.id %>
                    <div class="pull-right">
                      <%= image_tag @current_user.image, :size => "25x25" ,class: "rounded-circle" %>
                      <%= @current_user.name %>
                    </div>
                    <p class="right_balloon"><%= message.body %></p>
                  <% else message.receive_user_id == @current_user.id %>
                    <span ng-if="data.type == 'chat'">
                      <div class="pull-left">
                        <%= image_tag @receive_user.image, :size => "25x25" ,class: "rounded-circle" %>
                        <%= @receive_user.name %>
                      </div>
                      <p class="left_balloon"><%= message.body %></p>
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    <% end %>
  </div>
  <div class="container col-md-2">
    会いたい！ボタン
    <%= form_for(MeetRequest.new,url: meet_requests_url) do |form|%>
      <%= form.hidden_field :meet_request_user_id, :value => @current_user.id%>
      <%= form.hidden_field :meet_target_user_id, :value => @receive_user.id%>
      <% if MeetRequest.exists?(meet_request_user_id: @current_user.id, meet_target_user_id: @receive_user.id) %>
        <!-- <a class="disabled" role="button"><%= form.submit '会いたい！', class: "btn btn-success disabled"%></a> -->
        <a class="btn btn-success btn-block disabled" role="button">送信済</a>
        <!-- <button type="button" class="btn btn-success btn-lg" disabled>送信済</button> -->
      <% else %>
        <%= form.submit '会いたい！', class: "btn btn-block btn-success"%>
      <% end %>
    <% end %>
  </div>
</div>
<nav class="navbar fixed-bottom navbar-light" style="background-color: #120A4A;">
  <div class="container">
    <div class="container col-md-1 col-md-offset-6">
      <%=image_tag @receive_user.image, :size => "25x25", class:"rounded-circle"%>
      <span class="navbar-text" href="#" style="color:White">
        <%= @receive_user.name %>
      </span>
    </div>
  </div>
</nav>
