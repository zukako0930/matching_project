<h1 style="margin-top:3%;"></h1>
<%= form_with(model: @user) do |form| %>
<div class="container-fluid col-md-8" style="background-color:white;padding:3%;box-shadow: 0px 0px 8px silver;">
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_name, class:"form-control" %>
  </div>
  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email,class:"form-control"%>
  </div>
  <!-- パスワードは認証の処理が必要 -->
  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password,class:"form-control"%>
  </div>
  <p class="lead">現在の画像</p>
  <div class="row">
    <div class="container col-3">
      <div class="field" style="padding:2%">
        <%= image_tag @user.image, class:"rounded", style:"padding:2%",onClick:"$('#upfile').click()",id:"img_prev" %>
        <%= form.file_field :image,style:"display:none;", id:"upfile"%>
          <script type="text/javascript">
          $(function() {
            function readURL(input) {
              if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                  $('#img_prev').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
              }
            }

            $("#upfile").change(function(){
              $('#img_prev').removeClass('hidden');
              readURL(this);
            });
          });
          </script>
      </div>
    </div>
    <div class="container col-3">
      <div class="field" style="padding:2%">
        <%= image_tag @user.image2, class:"rounded", style:"padding:2%",onClick:"$('#upfile2').click()",id:'img_prev2' %>
