<h1 style="margin-top:3%;"></h1>
<%= form_with(model: @user) do |form| %>
<div class="container-fluid col-md-8">
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_name, class:"form-control" %>
  </div>
  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email,class:"form-control"%>
  </div>
  <!-- パスワードは認証の処理が必要 -->
  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password,class:"form-control"%>
  </div>
  <p class="lead">現在の画像</p>
  <div class="row">
    <div class="container col-md-3">
      <div class="field" style="padding:2%">
          <%= image_tag @user.image, class:"rounded", style:"padding:2%;",onClick:"$('#upfile').click()" %>
          <%= form.file_field :image, style:"display:none;", id:"upfile"%>
      </div>
    </div>
    <div class="container col-md-3">
      <div class="field" style="padding:2%">
          <%= image_tag @user.image2, class:"rounded", style:"padding:2%",onClick:"$('#upfile2').click()"%>
          <%= form.file_field :image2, style:"display:none;", id:"upfile2"%>
      </div>
    </div>
    <div class="container col-md-3">
      <div class="field" style="padding:2%">
          <%= image_tag @user.image3, class:"rounded", style:"padding:2%",onClick:"$('#upfile3').click()"%>
          <%= form.file_field :image3, style:"display:none;", id:"upfile3"%>
      </div>
    </div>
    <div class="container col-md-3">
      <div class="field" style="padding:2%">
          <%= image_tag @user.image4, class:"rounded", style:"padding:2%",onClick:"$('#upfile4').click()"%>
          <%= form.file_field :image4, style:"display:none;", id:"upfile4"%>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="self-introduciton">プロフィール</label>
    <%= form.text_area :prof, class: "form-control", rows: "3"%>
  </div>

  <div class="actions" align="right">
    <%= form.submit '更新',class:"btn btn-primary"%>
  </div>

</div>
<% end %>
